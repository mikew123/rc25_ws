<?xml version="1.0" ?>
<robot name="rc25" xmlns:xacro="http://ros.org/wiki/xacro">

<!-- Robocolubus 2025 robot model -->
  <!-- Init colours -->
  <material name="black">
      <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <material name="dark">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>

  <material name="light_black">
    <color rgba="0.4 0.4 0.4 1.0"/>
  </material>

  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>

  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>

  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <material name="orange">
    <color rgba="1.0 0.4235 0.0392 1.0"/>
  </material>

  <material name="brown">
    <color rgba="0.8706 0.8118 0.7647 1.0"/>
  </material>

  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>

  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <link name="map"/>

  <!-- map -> odom actively managed by navigation2, this is temporary -->
  <joint name="odom_joint" type="fixed">
    <parent link="map"/>
    <child link="odom" />
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
  <link name="odom"/>

  <!-- odom -> base_footprint actively managed by wheels node -->
  <joint name="base_footprint_joint" type="fixed">
    <parent link="odom"/>
    <child link="base_footprint" />
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="base_footprint"/>

  <!--  base_footprint -> mid_joint used for colision and obsticals -->
  <joint name="mid_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="mid_link" />
    <origin xyz="0.230 0 0" rpy="0 0 0"/>
  </joint>

  <link name="mid_link"/>


  <joint name="base_link_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link" />
    <origin xyz="0 0 0.085" rpy="0 0 0"/>
  </joint>
 
  <link name="base_link">
    <visual name="robot_body">
      <origin xyz="0.220 0.0 0.070" rpy="0 0 0"/>
      <geometry> <box size="0.650 0.380 0.250"/> </geometry>
      <material name="orange"/>
    </visual>
    <visual name="RL_wheel">
      <origin xyz="0 0.170 0" rpy="1.57 0 0"/>
      <geometry> <cylinder length="0.070" radius="0.090"/> </geometry>
      <material name="black"/>
    </visual>
    <visual name="RR_wheel">
      <origin xyz="0 -0.170 0" rpy="-1.57 0 0"/>
      <geometry> <cylinder length="0.070" radius="0.090"/> </geometry>
      <material name="black"/>
    </visual>
    <visual name="FL_wheel">
      <origin xyz="0.450 0.170 0" rpy="1.57 0 0"/>
      <geometry> <cylinder length="0.070" radius="0.090"/> </geometry>
      <material name="black"/>
    </visual>
    <visual name="FR_wheel">
      <origin xyz="0.450 -0.170 0" rpy="-1.57 0 0"/>
      <geometry> <cylinder length="0.070" radius="0.090"/> </geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.250" rpy="0 0 0"/>
  </joint>

  <link name="imu_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.015 0.005"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <!-- RPLidar C1  -->
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.200 0 0.320" rpy="0 0 0"/>
  </joint>

  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.020" radius="0.025"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>


  <!-- GPS M10Q  -->
  <joint name="gps_joint" type="fixed">
    <parent link="base_link"/>
    <child link="gps_link"/>
    <origin xyz="0.040 0 0.250" rpy="0 0 0"/>
  </joint>

  <link name="gps_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.030 0.030 0.015"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <!-- Camera OAK-D Lite -->
  <joint name="oak-d-base-frame" type="fixed">
    <parent link="base_link"/>
    <child link="oak-d-base-frame"/>
    <origin xyz="0.300 0.00 0.240" rpy="0 0 0"/>
  </joint>

  <link name="oak-d-base-frame">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.1 0.015"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>


  <!-- Front 45 deg tof arrays are mounted at 45 angle = FOV 135 -->
  <joint name="tof_fc_joint" type="fixed">
    <parent link="base_link"/>
    <child link="tof_fc_link"/>
    <origin xyz="0.600 0 0.110" rpy="0 0 0"/>
  </joint>
  <link name="tof_fc_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.030" radius="0.020"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="tof_fl_joint" type="fixed">
    <parent link="base_link"/>
    <child link="tof_fl_link"/>
    <origin xyz="0.600 0 0.110" rpy="0 0 0.785"/>
  </joint>
  <link name="tof_fl_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.030" radius="0.020"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="tof_fr_joint" type="fixed">
    <parent link="base_link"/>
    <child link="tof_fr_link"/>
    <origin xyz="0.600 0 0.110" rpy="0 0.08 -0.785"/>
  </joint>
  <link name="tof_fr_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.030" radius="0.020"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <!-- Rear 45 deg tof arrays are mounted at 45 angle = FOV 135-->
  <joint name="tof_rc_joint" type="fixed">
    <parent link="base_link"/>
    <child link="tof_rc_link"/>
    <origin xyz="-0.170 0 0.110" rpy="0 0 3.1415"/>
  </joint>
  <link name="tof_rc_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.030" radius="0.020"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="tof_rl_joint" type="fixed">
    <parent link="base_link"/>
    <child link="tof_rl_link"/>
    <origin xyz="-0.170 0 0.110" rpy="0 0 -2.356"/>
  </joint>
  <link name="tof_rl_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.030" radius="0.020"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="tof_rr_joint" type="fixed">
    <parent link="base_link"/>
    <child link="tof_rr_link"/>
    <origin xyz="-0.170 0 0.110" rpy="0 0.08 2.356"/>
  </joint>
  <link name="tof_rr_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.030" radius="0.020"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>


